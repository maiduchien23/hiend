{{#section 'head'}}
<style>
    .weatherWidget {
        border: solid 1px blue;
        margin: 4px;
        padding: 4px;
    }
</style>
{{/section}}

<div class="weatherWidget">
    {{#each partials.weatherContext}}
    <div class="location">
        <h3>{{location.name}}</h3>
        <a href="{{location.forecastUrl}}">
            {{weather}}, {{temp}}
        </a>
    </div>
    {{/each}}
    <small>Source: <a href="http://openweathermap.org">OpenWeatherMap</a></Source></small>
</div>